{
  "compilerOptions": {
    "charset": "utf8",
    "newLine": "LF",
    "target": "es2018",
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  }
}
